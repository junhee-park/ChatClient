<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Client" Height="600" Width="800">
    <Grid>

        <!-- ✅ 방 목록 화면 -->
        <Grid Name="LobbyView" Margin="0,0,-26,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 유저 목록 -->
            <ListBox Name="LobbyUserList" Grid.Column="0" Margin="10" />

            <!-- 채팅 방 목록 -->
            <ListBox Name="RoomList" Grid.Column="1" Margin="10"
                     SelectionChanged="RoomList_SelectionChanged" />
        </Grid>

        <!-- ✅ 채팅 방 화면 -->
        <Grid Name="ChatRoomView" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 유저 목록 -->
            <ListBox Name="RoomUserList" Grid.Column="0" Margin="10" />

            <!-- 채팅 -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 채팅 로그 -->
                <TextBox Name="ChatLog" Margin="10" IsReadOnly="True" VerticalScrollBarVisibility="Auto" />

                <!-- 채팅 입력 -->
                <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="10">
                    <TextBox Name="ChatInput" Width="600" />
                    <Button Content="전송" Click="SendButton_Click" Margin="5,0,0,0"/>
                </StackPanel>

                <!-- 나가기 버튼 -->
                <Button Content="나가기" Grid.Row="2" Margin="10" Click="ExitRoom_Click" HorizontalAlignment="Right"/>
            </Grid>
        </Grid>

    </Grid>
</Window>